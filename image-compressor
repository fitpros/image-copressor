        <div class="tool-wrapper">
            <div class="input-section">
                <input type="file" id="imageInput" accept="image/*">
                <label for="compressionLevel">Compression Level: <span id="compressionValue">50</span>%</label>
                <input type="range" id="compressionLevel" min="0" max="100" value="50">
            </div>
            <div class="preview-section">
                <div class="image-container">
                    <h3>Original Image</h3>
                    <img id="originalPreview" alt="Original image preview">
                </div>
                <div class="image-container">
                    <h3>Compressed Image</h3>
                    <img id="compressedPreview" alt="Compressed image preview">
                </div>
            </div>
            <button id="downloadBtn">Download Compressed Image</button>
        </div>

        <div class="ad-section">
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5721788035694701"
     crossorigin="anonymous"></script>
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=YOUR_ADSENSE_AD_UNIT_ID" crossorigin="anonymous"></script>
            <ins class="adsbygoogle" style="display:block" data-ad-client="YOUR_ADSENSE_AD_UNIT_ID" data-ad-slot="YOUR_AD_SLOT_ID" data-ad-format="auto" data-full-width-responsive="true"></ins>
            <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
        </div>
    </div>

    <script>
        const imageInput = document.getElementById('imageInput');
        const compressionLevel = document.getElementById('compressionLevel');
        const compressionValue = document.getElementById('compressionValue');
        const originalPreview = document.getElementById('originalPreview');
        const compressedPreview = document.getElementById('compressedPreview');
        const downloadBtn = document.getElementById('downloadBtn');
        let compressedImageData = null;

        compressionLevel.oninput = () => {
            compressionValue.textContent = compressionLevel.value;
            if (imageInput.files[0]) compressImage(imageInput.files[0]);
        };

        imageInput.onchange = () => {
            const file = imageInput.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    originalPreview.src = e.target.result;
                    originalPreview.style.display = 'block';
                    compressImage(file);
                };
                reader.readAsDataURL(file);
            }
        };

        function compressImage(file) {
            const img = new Image();
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            img.onload = () => {
                canvas.width = img.width;
                canvas.height = img.height;
                ctx.drawImage(img, 0, 0);
                const quality = (100 - compressionLevel.value) / 100;
                compressedImageData = canvas.toDataURL('image/jpeg', quality);
                compressedPreview.src = compressedImageData;
                compressedPreview.style.display = 'block';
                downloadBtn.style.display = 'block';
            };
            img.src = URL.createObjectURL(file);
        }

        downloadBtn.onclick = () => {
            if (compressedImageData) {
                const link = document.createElement('a');
                link.download = 'compressed_image.jpg';
                link.href = compressedImageData;
                link.click();
            }
        };
    </script>
