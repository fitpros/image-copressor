        <div class="tool-wrapper">
            <div class="input-section">
                <input type="file" id="imageInput" accept="image/*">
                <label for="compressionLevel">Compression Level: <span id="compressionValue">50</span>%</label>
                <input type="range" id="compressionLevel" min="0" max="100" value="50">
            </div>

            <div class="preview-section">
                <div class="image-container">
                    <h3>Original Image</h3>
                    <img id="originalPreview" alt="Original image preview">
                </div>
                <div class="image-container">
                    <h3>Compressed Image</h3>
                    <img id="compressedPreview" alt="Compressed image preview">
                </div>
            </div>

            <button id="downloadBtn">Download Compressed Image</button>
        </div>

        <!-- Bottom Ad Section -->
        <div class="ad-section">
            <!-- Replace with your actual AdSense credentials -->
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=YOUR_ADSENSE_AD_UNIT_ID"
                    crossorigin="anonymous"></script>
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="YOUR_ADSENSE_AD_UNIT_ID"
                 data-ad-slot="YOUR_AD_SLOT_ID"
                 data-ad-format="auto"
                 data-full-width-responsive="true"></ins>
            <script>
                 (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
